package textarea

import "strconv"

type State struct {
	Name        string
	Placeholder string
	Rows        int
}

templ Component(state State) {
	<textarea
		name={ state.Name }
		class="w-full p-3 rounded-lg border border-pink focus:ring-2 focus:ring-red focus:border-red focus:border-transparent"
		placeholder={ state.Placeholder }
		rows={ strconv.Itoa(state.Rows) }
	></textarea>
}
